<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_20dp">

        <TextView
            android:id="@+id/serieTitleTextView"
            style="@style/Header.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scoreImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Carnival Row"/>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:background="@color/blackAlpha75"
            app:layout_constraintEnd_toEndOf="@id/serieTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serieTitleTextView" />

        <ImageView
            android:id="@+id/scoreImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/round_star_24"
            android:tint="@color/colorScoreDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreTextView"
            style="@style/Header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="@dimen/text_25"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/scoreImage"
            app:layout_constraintStart_toStartOf="@id/scoreImage"
            app:layout_constraintEnd_toEndOf="@id/scoreImage"
            app:layout_constraintBottom_toBottomOf="@id/scoreImage"
            tools:text="10"/>

        <TextView
            android:id="@+id/numScorersTextView"
            style="@style/Text.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_10"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/scoreImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="SmallSp"
            tools:text="Han puntuado esta serie 4 personas" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@id/scoreImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/scoreImage">

            <LinearLayout
                android:id="@+id/categoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_20dp"
                app:layout_constraintTop_toBottomOf="@id/scoreImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scoreImage">

                <TextView
                    android:id="@+id/categoryTitle"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_title"/>

                <TextView
                    android:id="@+id/categoryTextView"
                    style="@style/Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/platformLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_20dp"
                app:layout_constraintTop_toBottomOf="@id/categoryLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scoreImage">

                <TextView
                    android:id="@+id/platformTitle"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/platform_title"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/platformCardView"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="@dimen/margin_20dp">

                    <ImageView
                        android:id="@+id/platformImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/punctuationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@id/container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/titlePunctuation"
                style="@style/Text"
                android:text="@string/ask_punctuation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <bemobile.splanes.com.aikver.presentation.common.widget.ScoreView
                android:id="@+id/scoreView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                app:layout_constraintStart_toEndOf="@id/titlePunctuation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/titlePunctuation"
                app:layout_constraintBottom_toBottomOf="@id/titlePunctuation"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadScoreButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/share"
            android:textSize="@dimen/text_11"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/punctuationLayout" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/scoreGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="punctuationLayout, uploadScoreButton" />

        <TextView
            android:id="@+id/creatorTextView"
            style="@style/Text.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deleteButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uploadScoreButton"
            tools:text="AÃ±adida por Sergi, 19/07/20" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:padding="3dp"
            android:background="@drawable/button_selector"
            android:src="@drawable/ic_delete"
            android:tint="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/include_loader" />

    <bemobile.splanes.com.aikver.presentation.common.widget.ResultView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
